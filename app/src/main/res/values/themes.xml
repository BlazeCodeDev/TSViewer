<resources xmlns:tools="http://schemas.android.com/tools">

    <!--BASE THEME-->
    <style name="Theme.TSViewer" parent="Theme.Material3.DynamicColors.DayNight">
        <!--PRIMARY COLORS-->
        <item name="colorPrimary">@color/material_dynamic_primary40</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_secondary40</item>
        <item name="colorOnPrimary">@color/material_dynamic_primary100</item>
        <item name="android:colorBackground">@color/background</item>
        <!--STATUS BAR-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/material_dynamic_neutral95</item>
        <item name="android:windowLightStatusBar">@bool/light_status_bar</item>
        <!--TEXT-->
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Theme.TSViewer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--TOOLBAR-->
    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/inter</item>
    </style>
</resources>